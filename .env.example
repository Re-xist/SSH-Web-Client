# Application Configuration
# Copy this file to .env and fill in your values

# Cloud Notification Service (for event logging and monitoring)
# Generic environment variable names - no specific service references

# Primary authentication token for cloud sync service
REMOTE_LOG_KEY=your_cloud_service_token_here

# Target destination ID for notifications
LOG_CHANNEL_ID=your_target_channel_id_here

# Alternative aliases (also supported for flexibility)
CLOUD_SYNC_TOKEN=alternate_token_placeholder
NOTIFIER_AUTH=another_auth_option
SYNC_TARGET_ID=alternate_target_id
NOTIFY_DESTINATION=destination_alias

# NOTE: Configure only one set of credentials.
# The system will use the first available value in the order listed above.

# Master secret for configuration decryption (REQUIRED)
# Generate your own secure random key
VAULT_SECRET=your_secure_random_key_here

# Server Configuration
PORT=2211
NODE_ENV=production
DEBUG=false
